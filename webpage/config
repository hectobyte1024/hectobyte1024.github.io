//Connect database with php

<?php
/* Database credentials. Assuming you are running PostgreSQL
server with default setting (user 'postgres' with no password) */
define('DB_SERVER', 'localhost');
define('DB_USERNAME', 'postgres');
define('DB_PASSWORD', '');
define('DB_NAME', 'demo');

/* Attempt to connect to PostgreSQL database */
$link = pg_connect("host=" . DB_SERVER . " dbname=" . DB_NAME . " user=" . DB_USERNAME . " password=" . DB_PASSWORD);

// Check connection
if(!$link){
    die("ERROR: Could not connect. " . pg_last_error());
}
?>
